{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "esnext",
            "es5",
            "es6",
            "esnext.asynciterable"
        ],
        "strict": true,
        "rootDir": "src",
        "outDir": "build",
        "sourceMap": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "types": [
            "node",
        ]
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}